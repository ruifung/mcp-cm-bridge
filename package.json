{
  "name": "@ruifung/codemode-bridge",
  "version": "1.0.12",
  "description": "MCP bridge that connects to upstream MCP servers and exposes tools via a single codemode tool for orchestration",
  "main": "dist/index.js",
  "bin": {
    "codemode-bridge": "dist/cli/index.js"
  },
  "files": [
    "dist",
    "config"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "dev": "tsx src/cli/index.ts",
    "dev:deno": "deno run --allow-net --allow-read src/cli/index.ts",
    "test": "vitest",
    "test:deno": "deno run -A npm:vitest"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "codemode",
    "cloudflare",
    "bridge",
    "orchestration"
  ],
  "author": "",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ruifung/mcp-cm-bridge.git"
  },
  "type": "module",
  "dependencies": {
    "@cloudflare/codemode": "^0.1.0",
    "@modelcontextprotocol/sdk": "^1.27.0",
    "acorn": "^8.16.0",
    "chalk": "^5.6.2",
    "commander": "^12.1.0",
    "dockerode": "^4.0.9",
    "open": "^10.1.0",
    "uuid": "^13.0.0",
    "vm2": "^3.10.5",
    "winston": "^3.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/dockerode": "^4.0.1",
    "@types/node": "^25.3.0",
    "@vitest/ui": "^4.0.18",
    "shx": "^0.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "optionalDependencies": {
    "isolated-vm": "^6.0.2"
  }
}
